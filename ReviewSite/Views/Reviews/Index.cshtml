@model IEnumerable<ReviewSite.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-default" href="@Url.Action("Create", "Reviews")">Create New &raquo;</a>
</p>


<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-3 thumbnail">
            <div>
                @Html.DisplayFor(modelItem => item.Category.Brand)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Make)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Model)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Price)
            </div>
            <p>

                @Html.ActionLink("Details", "Details", new { id = item.ReviewID }) 

            </p>
        </div>

    }
</div>


